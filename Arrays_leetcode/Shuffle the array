class Solution {
    public int[] shuffle(int[] nums, int n) {
        int[] ans =new int [nums.length];
        int i=0;
        int j=n;
        int index=0;
        while(i<n){
            ans[index]=nums[i];
            index++;
            i++;
            ans[index]=nums[j];
            index++;
            j++;
        }


        return ans;
        
        
    }
}
