import java.util.Scanner;

public class leetcode {
    public static void main(String args[]) {
        Scanner input = new Scanner(System.in);
        System.out.println("Enter the number :");
        int a = input.nextInt();
        System.out.print(sumofn(a));

    }

    static int sumofn(int n) {
        int sum;
        return sum = n * (n + 1) / 2;

    }

}
